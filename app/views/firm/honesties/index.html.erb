        <div style="margin-left: 40px;margin-top: 10px">
          <div id="localImag"><img id="preview" style="diplay:none;width: 100px;height: 110px;border: 1px solid #8FBED1" onload="ResizePic(this)" /></div>
        </div>

        <div style="margin-left: 40px"> <%= submit_tag '上传图片' %></div>
    <% end %>
  </div>
</div>
</div>
